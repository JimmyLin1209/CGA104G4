<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.prod.model.ProdVO" table="PROD">

		<id name="prodId" column="PROD_ID">
			<generator class="identity" />
		</id>

		<property name="prodStat" column="PROD_STAT" />
		<property name="prodName" column="PROD_NAME" />
		<property name="prodCont" column="PROD_CONT" />
		<property name="prodPrc" column="PROD_PRC" />
		<property name="prodTime" column="PROD_TIME" />

		<many-to-one name="storeVO"
			class="com.store.model.StoreVO" lazy="false">
			<column name="STORE_ID" />
		</many-to-one>

		<many-to-one name="prodTypeVO"
			class="com.prodtype.model.ProdTypeVO" lazy="false">
			<column name="PROD_TYPE_ID" />
		</many-to-one>

	</class>
</hibernate-mapping>

