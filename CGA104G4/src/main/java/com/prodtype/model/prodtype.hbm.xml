<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.prodtype.model.ProdTypeVO" table="PROD_TYPE">

		<id name="prodTypeId" column="PROD_TYPE_ID">
			<generator class="identity" />
		</id>

		<property name="prodTypeName" column="PROD_TYPE_NAME" />

		<set name="prod" table="PROD" lazy="false" cascade="all"
			inverse="true" order-by="PROD_ID asc">
			<key>
				<column name="PROD_TYPE_ID" />
			</key>
			<one-to-many class="com.prod.model.ProdVO" />
		</set>

	</class>
</hibernate-mapping>

